@using FoodWasteReduction.Core.Entities
@model IEnumerable<FoodWasteReduction.Core.Entities.Package>
@{
    ViewData["Title"] = "Pakketten";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <p>No packages available at this time.</p>
            </div>
        }
        else
        {
            @foreach (var package in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@package.Name</h5>
                            <p class="card-text">
                                <strong>â‚¬@package.Price.ToString("F2")</strong><br />
                                <small>Pickup: @package.PickupTime.ToString("g")</small><br />
                                <small>Locatie: @package.Canteen?.Location - @package.Canteen?.City</small>
                            </p>

                            <button class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#products-@package.Id">
                                Toon @(package.Products?.Count() ?? 0) @(package.Products?.Count() == 1 ? "product" :
                        "producten") <i class="bi bi-chevron-down"></i>
                            </button>

                            <div class="collapse mt-2" id="products-@package.Id">
                                <div class="card card-body bg-light">
                                    <h6 class="bold">Producten:</h6>
                                    <ul class="list-unstyled">
                                        @foreach (var product in package.Products ?? Enumerable.Empty<Product>())
                                        {
                                            <li class="d-flex align-items-center mb-2">
                                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                                {
                                                    <img src="@product.ImageUrl" class="product-thumbnail me-2" alt="@product.Name"
                                                        onerror="this.src='/images/default-product.jpg';" />
                                                }
                                                <span>
                                                    @product.Name
                                                    @if (product.ContainsAlcohol)
                                                    {
                                                        <small class="text-danger ms-1">(18+)</small>
                                                    }
                                                </span>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end mt-3">
                                <button class="btn btn-primary">Reserveer</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
