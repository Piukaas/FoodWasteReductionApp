@model ProductViewModel

<div class="modal fade" id="newProductModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nieuw Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="productForm">
                    <div class="mb-3">
                        <label for="productName" class="form-label">Naam</label>
                        <input type="text" class="form-control" id="productName" required>
                    </div>
                    <div class="mb-3">
                        <label for="productImage" class="form-label">Afbeelding URL</label>
                        <div class="d-flex gap-3 align-items-start">
                            <div class="flex-grow-1">
                                <input type="url" class="form-control" id="productImage" onchange="previewImage(this)">
                            </div>
                            <div>
                                <img id="imagePreview" class="image-preview" src="" alt="Preview"
                                    onerror="this.style.display = 'none';">
                            </div>
                        </div>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="containsAlcohol">
                        <label class="form-check-label" for="containsAlcohol">Bevat alcohol</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuleren</button>
                <button type="button" class="btn btn-primary" onclick="createProduct()">Opslaan</button>
            </div>
        </div>
    </div>
</div>